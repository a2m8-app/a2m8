---
import WorkShop from "../components/Workshop";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to A2M8.">
  <main>
    <div class="w-full bg-base-200 py-7 pl-10">
      <h1 class="text-xl text-">Workshop</h1>
      <p>Download and use Script from here</p>
    </div>
    <WorkShop client:load />
  </main>
</Layout>

<style is:global>
  .image-wrapper {
    position: relative;
  }
  .image-wrapper::after {
    @apply bg-base-300 rounded-t-lg;
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50%;
    z-index: -1;
  }
</style>
